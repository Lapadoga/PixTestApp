<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/imagesListFragment">
    <fragment
        android:id="@+id/imagesListFragment"
        android:name="com.example.pix.ui.imagesList.ImagesListFragment"
        android:label="ImagesListFragment"
        tools:layout="@layout/fragment_list_images">
        <action
            android:id="@+id/action_imagesListFragment_to_imageFragment"
            app:destination="@id/imageFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/imageFragment"
        android:name="com.example.pix.ui.image.ImageFragment"
        android:label="ImageFragment"
        tools:layout="@layout/fragment_image">
        <argument
            android:name="picture"
            app:argType="string" />
    </fragment>
</navigation>
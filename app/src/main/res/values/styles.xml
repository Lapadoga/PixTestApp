<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchIconStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:searchIcon">@drawable/ic_search_custom</item>
        <item name="android:background">@color/grey_800</item>
        <item name="android:queryHint">@string/search_hint</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>

    <style name="StylePictureTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleCloseBtn" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_margin">@dimen/dimen_item_image_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/ic_close</item>
    </style>
</resources>